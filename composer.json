{
    "name": "pine3ree/pine3ree-plates-extension",
    "description": "A common base abstract Plates extension with methods auto-registration and more",
    "type": "library",
    "keywords": [
        "pine3ree",
        "plates",
        "template",
        "extension"
    ],
    "homepage": "https://github.com/pine3ree/p3-plates-extension",
    "readme": "README.md",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "pine3ree",
            "homepage": "https://github.com/pine3ree",
            "role": "Developer"
        }
    ],
    "support": {
        "docs": "https://github.com/pine3ree/p3-plates-extension/README.md",
        "issues": "https://github.com/pine3ree/p3-plates-extension/issues",
        "source": "https://github.com/pine3ree/p3-plates-extension"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": false,
        "prefer-stable": true,
        "minimum-stability": "dev"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "require": {
        "league/plates": "^3.5",
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "phpspec/prophecy-phpunit": "^1.1 || ^2.0",
        "phpstan/phpstan": "*",
        "phpstan/phpstan-strict-rules": "*",
        "phpunit/phpunit": "^7.5 || ^8.0 || ^9.0",
        "squizlabs/php_codesniffer": "^3.5.7",
        "vimeo/psalm": "^5.13",
        "webimpress/coding-standard": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "pine3ree\\Plates\\": "src/"
        },
        "files": [
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "pine3ree\\test\\Plates\\": "test/"
        }
    },
    "scripts": {
        "check-cs": "phpcs",
        "fix-cs": "phpcbf",
        "phpstan": "phpstan analyze -l max -c phpstan.neon ./src",
        "psalm": "psalm --shepherd --stats",
        "static-analysis": [
            "@phpstan",
            "@psalm"
        ],
        "test": "phpunit --colors=always",
        "check": [
            "@check-cs",
            "@static-analysis",
            "@test"
        ],
        "test-coverage": "@test-coverage-clover",
        "test-coverage-clover": "phpunit --colors=always --coverage-clover clover.xml",
        "test-coverage-html": "phpunit --colors=always --coverage-html coverage/html",
        "test-coverage-xml": "phpunit --colors=always --coverage-xml coverage/xml",
        "test-coverage-all": [
            "@test-coverage-html",
            "@test-coverage-xml",
            "@test-coverage-clover"
        ]
    }
}
